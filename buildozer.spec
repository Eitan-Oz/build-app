[app]

# (חובה) שם האפליקציה שיופיע בטלפון
title = OSDI Questionnaire

# (חובה) שם החבילה של האפליקציה, באותיות קטנות וללא רווחים
package.name = osdiapp

# (חובה) דומיין ייחודי לאפליקציה, בדרך כלל בסדר הפוך
package.domain = org.eitan.osdi

# (חובה) התיקייה שבה נמצא קובץ ה-main.py שלך
source.dir = .

# (חובה) רשימת סוגי הקבצים שיש לכלול באפליקציה.
# חשוב מאוד לוודא ש-ttf כלול כדי שהפונט ייכנס לאפליקציה.
source.include_exts = py,png,jpg,kv,atlas,ttf

# (חובה) גרסת האפליקציה
version = 1.0

# (חובה) רשימת הספריות שהאפליקציה צריכה כדי לרוץ.
# אלו כל הספריות שהתקנו עם pip.
requirements = python3,kivy,arabic_reshaper,python-bidi,pyminizip

# (חובה לאנדרואיד) כיוון המסך הרצוי. 'portrait' מתאים לאפליקציה שלנו.
orientation = portrait

# (מומלץ) אייקון האפליקציה. צור קובץ icon.png בגודל 512x512 ושמור אותו בתיקיית הפרויקט.
# icon.filename = %(source.dir)s/icon.png


[buildozer]

# רמת הפירוט של הלוג בזמן הבנייה. 2 מציג את כל המידע.
log_level = 2

# הצג אזהרה אם מריצים את הפקודה כמשתמש-על (root)
warn_on_root = 1


# =============================================================================
# הגדרות ספציפיות לאנדרואיד
# =============================================================================

[android]

# (חובה) רשימת ההרשאות שהאפליקציה תבקש מהמשתמש.
# אנו צריכים הרשאה לכתוב לאחסון כדי לשמור את קובץ ה-ZIP.
android.permissions = WRITE_EXTERNAL_STORAGE

# (חובה) גרסת ה-API הממוקדת (Target). גוגל דורשת ערך גבוה.
android.api = 33

# (חובה) גרסת ה-API המינימלית שהאפליקציה תתמוך בה. 21 מכסה כ-99% מהמכשירים.
android.minapi = 21

# (חובה) הארכיטקטורות של המעבדים שעבורן נבנה את האפליקציה.
# שילוב זה מכסה את רוב מכשירי האנדרואיד המודרניים.
android.archs = arm64-v8a, armeabi-v7a

# (מומלץ) מאפשר גיבוי אוטומטי של נתוני האפליקציה על ידי גוגל.
android.allow_backup = True

